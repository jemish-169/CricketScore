<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/match_item_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/match_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="10dp"
                android:background="@color/red_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="Completed" />

            <TextView
                android:id="@+id/match_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="Boys vs. Girls" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/batting_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Titans" />

                <TextView
                    android:id="@+id/batting_team_run_wicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="12/5" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/batting_team_run_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="RR - 2.4" />

            </LinearLayout>

            <TextView
                android:id="@+id/overs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="5.0 overs" />
        </LinearLayout>

        <TextView
            android:id="@+id/match_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:background="@color/white"
            android:paddingHorizontal="8dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="Match 1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/match_update_button"
            android:layout_width="wrap_content"
            android:text="@string/update"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:letterSpacing="0.05"
            android:textColor="@color/black"
            android:layout_marginEnd="2dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#BDBDBD"
            app:cornerRadius="6dp" />

        <ImageView
            android:id="@+id/share_match"
            android:layout_width="wrap_content"
            android:src="@drawable/baseline_reply_all_24"
            android:rotationY="180"
            android:paddingVertical="8dp"
            android:paddingEnd="8dp"
            android:background="@color/white"
            android:layout_gravity="end|center_vertical"
            android:contentDescription="@string/share"
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry" />

    </FrameLayout>
</LinearLayout>