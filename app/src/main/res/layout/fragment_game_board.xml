<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:foreground="@color/transparent_black"
                    android:scaleType="center"
                    android:src="@drawable/pitch" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/run_wicket"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="58sp"
                                tools:text="9/1" />

                            <TextView
                                android:id="@+id/over_balls"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                tools:text="(0.5)" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/require_run_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            tools:text="RR - 1.2" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/medium_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="10dp">

                            <TextView
                                android:id="@+id/tv_batsman_one_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:drawablePadding="10dp"
                                android:textColor="@color/yellow"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:drawableStartCompat="@drawable/baseline_sports_cricket_24"
                                tools:text="Baiju Pulparambil" />

                            <TextView
                                android:id="@+id/tv_batsman_one_run"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                tools:text="0(0)" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="10dp">

                            <TextView
                                android:id="@+id/tv_batsman_two_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:drawablePadding="10dp"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:drawableStartCompat="@drawable/baseline_sports_cricket_24"
                                tools:text="Baiju Pulparambil" />

                            <TextView
                                android:id="@+id/tv_batsman_two_run"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                tools:text="0(0)" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/baseline_arrow_back_24" />

                    <TextView
                        android:id="@+id/gameBoardToolBar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        tools:text="bheem vs chutki"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/over_game"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:gravity="center"
                        android:text="@string/declare"
                        android:textColor="@color/white"
                        android:textSize="22sp" />
                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_blue"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_baller_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:drawableStartCompat="@drawable/baseline_sports_baseball_24"
                        tools:text="Deep Tekchandani" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/baller_balls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:text="0.5 -" />

                    <TextView
                        android:id="@+id/baller_runs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:text="8 -" />

                    <TextView
                        android:id="@+id/baller_wickets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:text="1" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ball_rv"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="10"
                    tools:listitem="@layout/item_ball" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:stretchColumns="*">

                <TableRow tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/run0"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/light_btn_background"
                            android:gravity="center"
                            android:text="@string/_0"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/run3"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/light_btn_background"
                            android:gravity="center"
                            android:text="@string/_3"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/run5"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/dark_btn_background"
                            android:gravity="center"
                            android:text="@string/_5"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/run1"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/light_btn_background"
                            android:gravity="center"
                            android:text="@string/_1"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/run4"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/light_btn_background"
                            android:gravity="center"
                            android:text="@string/_4"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/run7"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/dark_btn_background"
                            android:gravity="center"
                            android:text="@string/_7"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/run2"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/light_btn_background"
                            android:gravity="center"
                            android:text="@string/_2"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/run6"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/light_btn_background"
                            android:gravity="center"
                            android:text="@string/_6"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ball_wide"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/dark_btn_background"
                            android:gravity="center"
                            android:text="@string/wd"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ball_unod"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/dark_btn_background"
                            android:gravity="center"
                            android:text="@string/undo"
                            android:textColor="@color/green_text"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ball_out"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/dark_btn_background"
                            android:gravity="center"
                            android:text="@string/out"
                            android:textColor="@color/red_text"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ball_nb"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/dark_btn_background"
                            android:gravity="center"
                            android:text="@string/nb"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>